@attribute [Route(Routes.MATHS_PERCENTAGE_CALCULATOR)]

@namespace CloudToolbox.Components.Toolbox.Maths

@using System.Text;
@using CloudToolbox.Data;
@using CloudToolbox.Common.Routes;
@using CloudToolbox.Components.Toolbox.Shared;

<ToolboxHeader Title="Percentage Calculator"
               Description="Converts the input string to lower case" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            return input.ToLower();
        }

        return string.Empty;
    }
}
