@attribute [Route(Routes.AREA_DATE_AND_TIME)]

@inject CalculatorCollectionService CollectionService

@if (CalcCollection != null)
{
    <CalculatorCollectionDisplay Collection="CalcCollection">
        <Description>
            Who, what, when, where, why? <br />
            We're not sure, but our @CalcCollection.Calculators.Count date and time calculators and converters sure know.
        </Description>
    </CalculatorCollectionDisplay>
}

@code {
    CalculatorCollection? CalcCollection;

    protected override void OnParametersSet()
    {
        CalcCollection = CollectionService.GetCollectionOfType(CalculatorAreaTypes.DateAndTime);
    }
}