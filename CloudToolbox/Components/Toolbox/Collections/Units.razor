@attribute [Route(Routes.AREA_UNITS)]

@namespace CloudToolbox.Components.Collections
@inject CalculatorCollectionService CollectionService

@if (CalcCollection != null)
{
    <UnitsCalculatorCollectionDisplay Collection="CalcCollection">
        <Description>
            How many centimetres are in an inch?<br />
            I have no idea, but lucky one of our @CalcCollection.Calculators.Count unit calculators and converters can give you the answer quicker than you can read this text.*<br />
            <br />
            <small>* Probably.</small>
        </Description>
    </UnitsCalculatorCollectionDisplay>
}

@code {
    CalculatorCollection? CalcCollection;

    protected override void OnParametersSet()
    {
        CalcCollection = CollectionService.GetCollectionOfType(CalculatorAreaTypes.Units);
    }
}