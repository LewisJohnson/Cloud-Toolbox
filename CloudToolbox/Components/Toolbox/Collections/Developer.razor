@attribute [Route(Routes.AREA_DEVELOPER)]

@inject CalculatorCollectionService CollectionService

@if (CalcCollection != null)
{
    <CalculatorCollectionDisplay Collection="CalcCollection">
    <Description>
        01110101 00100000 01110010 00100000 01100011 01101111 01101111 01101100<br />
        Not sure what that means? Well we're sure one of our @CalcCollection.Calculators.Count developer based calculators and converters can let you know.
    </Description>
</CalculatorCollectionDisplay>
}

@code {
    CalculatorCollection? CalcCollection;

    protected override void OnParametersSet()
    {
        CalcCollection = CollectionService.GetCollectionOfType(CalculatorAreaTypes.Developer);
    }
}