@attribute [Route(Routes.DATE_AND_TIME_DURATION_BETWEEN_DATES)]

@inherits BetweenDatesBase
@inject CalculatorCollectionService CollectionService

<SimpleCalculatorContainer Collection="@CollectionService.GetCollectionOfType(CalculatorAreaTypes.DateAndTime)"
    MetaPageTitle="Calculate the Duration Between Two Dates"
    MetaDescription="Calculate the days, hours & minutes between two dates">
    <Header>
        <ToolboxHeader Title="Duration Between Two Dates">
            <Description>
                <p>
                    Using our simple calculator, you can work out how many days, hours, minutes, and seconds there are between two dates.
                </p>
            </Description>
        </ToolboxHeader>
    </Header>

    <Calculator>
        <SimpleCalculator Inputs="Inputs" ResultsTemplate="ResultsTemplate" OnChangeEvent="@OnChange"></SimpleCalculator>
    </Calculator>
</SimpleCalculatorContainer>