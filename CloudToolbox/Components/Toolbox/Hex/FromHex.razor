@namespace CloudToolbox.Components.Toolbox
@page "/Toolbox/From-Hex"

@using System.Text;
@using CloudToolbox.Components.Toolbox.Shared;
@using CloudToolbox.Data;

<ToolboxHeader Title="To Base64"
               Description="Converts a hexadecimal byte string back into its raw value" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            try
            {
                var hexArray = Convert.FromHexString(input);
                return System.Text.Encoding.UTF8.GetString(hexArray, 0, hexArray.Length);

            } catch (Exception _)
            {
                return "Invalid input";
            }
        }

        return string.Empty;
    }
}
