@namespace CloudToolbox.Components.Toolbox
@page "/Toolbox/Text/To-Upper-Case"

@using System.Text;
@using CloudToolbox.Components.Toolbox.Shared;
@using CloudToolbox.Data;

<ToolboxHeader Title="To Upper Case"
               Description="Converts the input string to upper case" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            return input.ToUpper();
        }

        return string.Empty;
    }
}
