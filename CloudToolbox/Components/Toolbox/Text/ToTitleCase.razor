@attribute [Route(Routes.TEXT_TO_TITLE_CASE)]

@namespace CloudToolbox.Components.Toolbox.Text

@using System.Text;
@using System.Globalization;
@using CloudToolbox.Data;
@using CloudToolbox.Common.Routes;
@using CloudToolbox.Components.Shared;

<ToolboxHeader Title="To Title Case"
               Description="Converts text to title case" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            return ConvertToTitleCase(input);
        }

        return string.Empty;
    }

    public static string ConvertToTitleCase(string str)
    {
        return CultureInfo.CurrentCulture.TextInfo.ToTitleCase(str.ToLower());
    }
}
