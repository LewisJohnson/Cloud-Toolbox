@namespace CloudToolbox.Components.Toolbox
@page "/Toolbox/Text/To-Title-Case"

@using System.Text;
@using CloudToolbox.Components.Toolbox.Shared;
@using CloudToolbox.Data;
@using System.Globalization;

<ToolboxHeader Title="To Title Case"
               Description="Converts text to title case" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            return ToTitleCase(input);
        }

        return string.Empty;
    }

    public static string ToTitleCase(string str)
    {
        return CultureInfo.CurrentCulture.TextInfo.ToTitleCase(str.ToLower());
    }
}
