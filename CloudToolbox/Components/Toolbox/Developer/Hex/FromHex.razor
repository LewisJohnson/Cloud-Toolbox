@attribute [Route(Routes.DEVELOPER_FROM_HEX)]

@namespace CloudToolbox.Components.Toolbox.Developer
@inherits ToHexBase

<SimpleCalculatorContainer HeaderColour="@Areas.Developer.CssCalulatorHeaderBackgroundColour"
                           PanelColour="@Areas.Developer.CssCalulatorPanelColour">
    <Header>
        <NewToolboxHeader Title="From Hex">
            <Description>
                <p>
                    To use this converter, simply insert hexadecimal bytes into the field and we'll give you back text.
                </p>
            </Description>
        </NewToolboxHeader>
    </Header>

    <Calculator>
        <SimpleCalculator Inputs="Inputs" ResultsTemplate="ResultsTemplate" OnChangeEvent="@OnChange"></SimpleCalculator>
    </Calculator>
</SimpleCalculatorContainer>