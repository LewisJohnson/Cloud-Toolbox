@attribute [Route(Routes.DEVELOPER_FROM_BASE64)]

@namespace CloudToolbox.Components.Toolbox.Developer

@using System.Text;
@using CloudToolbox.Data;
@using CloudToolbox.Common.Routes;
@using CloudToolbox.Components.Shared;

<ToolboxHeader Title="From Base64"
               Description="Converts a UTF-8 Base64 string back into its raw value" 
/>
<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            try
            {
                return Encoding.UTF8.GetString(Convert.FromBase64String(input));
            } catch (Exception _)
            {
                return  "Invalid input";
            }
        }

        return string.Empty;
    }
}
