@attribute [Route(Routes.DEVELOPER_TO_BASE64)]

@namespace CloudToolbox.Components.Toolbox.Developer

@using System.Text;
@using CloudToolbox.Data;
@using CloudToolbox.Common.Routes;
@using CloudToolbox.Components.Toolbox.Shared;

<ToolboxHeader Title="To Base64"
               Description="Converts the input string into an UTF-8 Base64 string" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            return Convert.ToBase64String(Encoding.UTF8.GetBytes(input ?? string.Empty));
        }

        return string.Empty;
    }
}