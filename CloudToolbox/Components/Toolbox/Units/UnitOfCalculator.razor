@page "/Toolbox/Units/{Units?}"

@namespace CloudToolbox.Components.Toolbox.Units
@inherits UnitOfCalculatorBase
@inject CalculatorCollectionService CollectionService

<SimpleCalculatorContainer Collection="@CollectionService.GetCollectionOfType(CalculatorAreaTypes.Units)">
    <Header>
        <ToolboxHeader Title="@(DisplayUnitFrom + " to " + DisplayUnitTo)">
            <Description>
                <GenericUnitsCalculatorDescription FromUnit="@DisplayUnitFrom" ToUnit="@DisplayUnitTo" />
            </Description>
        </ToolboxHeader>
    </Header>

    <Calculator>
        <SimpleCalculator Inputs="Inputs" ResultsTemplate="ResultsTemplate" OnChangeEvent="@OnChange"></SimpleCalculator>
    </Calculator>
</SimpleCalculatorContainer>