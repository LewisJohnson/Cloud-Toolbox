@namespace CloudToolbox.Components.Toolbox
@page "/Toolbox/Units/cm-to-inch"

@using System.Text;
@using CloudToolbox.Components.Toolbox.Shared;
@using CloudToolbox.Data;

<ToolboxHeader Title="Cm to inch"
               Description="Converts centimeters to inches" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            if (double.TryParse(input, out double num))
            {
                return (num / 2.54).ToString("#.##");
            } else
            {
                return "Invalid input";
            }
        }

        return string.Empty;
    }
}
