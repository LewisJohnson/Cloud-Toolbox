@attribute [Route(Routes.UNITS_INCH_TO_CM)]

@namespace CloudToolbox.Components.Toolbox.Units

@using System.Text;
@using CloudToolbox.Data;
@using CloudToolbox.Common.Routes;
@using CloudToolbox.Components.Toolbox.Shared;

<ToolboxHeader Title="Inch to cm"
               Description="Converts inches to centimeters" />

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            if (double.TryParse(input, out double num))
            {
                return (num * 2.54).ToString("#.##");
            } else
            {
                return "Invalid input";
            }
        }

        return string.Empty;
    }
}
