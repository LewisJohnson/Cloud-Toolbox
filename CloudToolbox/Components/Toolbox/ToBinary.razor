@namespace CloudToolbox.Toolbox
@page "/Toolbox/To-Binary"

@using System.Text;
@using CloudToolbox.Toolbox.Shared;
@using CloudToolbox.Data;

<ToolboxHeader Title="To Binary"
               Description="Converts the input string to hexadecimal bytes" 
/>

<InputOutput onChangeEvent="@OnChange" />

@code {
    public async Task<string> OnChange(string input)
    {
        if (input != null)
        {
            return string.Join(" ", Encoding.ASCII.GetBytes(input).Select(byt => Convert.ToString(byt, 2).PadLeft(8, '0')));
        }

        return string.Empty;
    }
}
