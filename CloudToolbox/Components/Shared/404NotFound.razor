@inject NavigationManager NavigationManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    if (HttpContextAccessor.HttpContext != null && !HttpContextAccessor.HttpContext.Response.HasStarted)
    {
        HttpContextAccessor.HttpContext.Response.StatusCode = 404;
    }
}

<PageTitle>Page Not found @Constants.TITLE_POSTFIX</PageTitle>

<HeadContent>
    <meta name="robots" content="noindex" />
</HeadContent>

<div class="w-100 d-flex p-2 position-sticky" style="cursor: pointer; top: 0; height: 50px; background-color: #0d6efd; z-index: 30">
    <a class="navbar-brand text-white position-relative fs-3 p-0 ps-2" @onclick="() => { NavigationManager.NavigateTo(NavigationManager.BaseUri, true); }" @onclick:preventDefault>
        <img src="/favicon.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
        Cloud Toolbox
    </a>
</div>

<div class="h-100 d-flex align-items-center justify-content-center mt-5 p-2">
    <div>
        <i class="bi bi-exclamation-triangle" style="font-size: 72px;"></i>
    </div>
    <div class="ps-3">
        <h1 role="alert">404 | Page not found</h1>
        <p>We're sorry, we couldn't find the page you requested.</p>
        <a class="btn btn-link" href="/" @onclick="() => { NavigationManager.NavigateTo(NavigationManager.BaseUri, true); }" @onclick:preventDefault>Homepage</a>
    </div>
</div>
