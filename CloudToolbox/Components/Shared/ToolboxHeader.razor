@namespace CloudToolbox.Components.Shared

<PageTitle>@Constants.TITLE_PREFIX @Title</PageTitle>

<div class="bg-white shadow-sm d-print-none">
    <h2 class="p-2">@Title</h2>
    <div class="p-3">@Description</div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment? Description { get; set; }

    public ToolboxHeader()
    {
        Title = string.Empty;
    }
}
